@model Spice.ViewModels.MenuVM

@{
    ViewData["Title"] = "Delete";
}


<br />
<h2 class="text-info">Delete Menu Item</h2>
<br />
<form method="post">
    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <input type="hidden" asp-for="Menu.Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Menu.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.Descrption" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Menu.Descrption)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.Price" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Menu.Price" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Menu.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.SubCategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Menu.SubCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Menu.SpicyLevel" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Menu.SpicyLevel" asp-items="Html.GetEnumSelectList<Menu.ESpicy>()" class="form-control"></select>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Menu.Img" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DeleteAndBackToListButton" model="Model.Menu.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
            tinymce.init({
                selector: 'textarea',
                plugins: "lists",
                toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist",
                menubar: 'file edit format',
                readonly: 1
            });</script>
    <script>tinymce.init({ selector: 'textarea' });</script>

}